{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.4",
  "body": [
    {
      "type": "TextBlock",
      "text": "Utah Avalanche Center",
      "size": "ExtraLarge",
      "weight": "Bolder",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "${danger}",
      "isSubtle": true,
      "color": "Accent",
      "weight": "Bolder",
      "size": "Large"
    },
    {
      "type": "Image",
      "url": "${rose}",
      "horizontalAlignment": "Center"
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "View Today's Forecast",
      "url": "https://utahavalanchecenter.org/forecast/salt-lake"
    }
  ]
}